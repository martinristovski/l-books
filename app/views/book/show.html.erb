<div id="navbar">
  <%= link_to "L'Books", '/', :id => 'navbar-logo' %>
  <button id="signin">Sign In</button> <!-- TODO -->
</div>
<div class="book-main">
  <div id="book-wrapper">
    <div class="book">
      <% unless @book.image_url.nil? %>
        <%= image_tag @book.image_url, class: "cover" %>
      <% end %>
      <div class="book-title-author-edition">
        <p class="book-title"><%= @book.title %></p>
        <p class="book-author"><%= @book.authors %></p>
        <p class="book-edition">
          <%= @book.publisher %>
          <% if not @book.edition.nil? and not @book.edition.empty? %>
            (<%= @book.edition %>)
          <% end %>
          |
          <%= @book.isbn %>
        </p>
      </div>
    </div>
  </div>

  <div class="listing-number">
    <% if @book.listings.empty? %>
      No listings found!
    <% elsif @book.listings.length == 1 %>
      1 listing found:
    <% else %>
      <%= @book.listings.length %> listings found:
    <% end %>
  </div>

  <% unless @book.listings.empty? %>
    <div class="listings-wrapper">
      <% @book.listings.each_with_index do |listing, index| %>
        <%= link_to "/listing/#{listing.id}", :class => 'listing', :id => "result-#{index}" do %>
          <div class="listing-price"><%= sprintf('$%.2f', listing.price) %></div>
          <div class="listing-description"><em><%= listing.condition %></em> | <%= listing.description.truncate(50) %></div>
          <div class="listing-actions foreign">
            <div class="listing-contact-status">Contact</div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>